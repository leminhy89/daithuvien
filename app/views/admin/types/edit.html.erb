<h2> Cập Nhật Kiểu Sách</h2>

<%= form_for [:admin, @type] do |f| %>
    <!-- Check for errors -->
    <%= render 'partials/errors', obj: @type %>
    
    <div class="form-group">
         <label for="name">Tên kiểu: </label>
        <%= f.text_field :name, class:'form-control' %>
    </div>
    <%= f.submit "Cập Nhật", class:'btn btn-primary' %>
    <%= link_to "Hủy", admin_types_path, class:'btn btn-default' %>
<% end %>