<h2> Thêm Mới Tác Giả</h2>

<%= form_for [:admin, @author] do |f| %>
    <!-- Check for errors -->
    <%= render 'partials/errors', obj: @author %>
    
    <div class="form-group">
         <label for="author_name">Tên Tác giả: </label>
        <%= f.text_field :author_name, class:'form-control' %>
    </div>
    <div class="form-group">
         <label for="slug">Slug: </label>
        <%= f.text_field :slug, class:'form-control' %>
    </div>
    <%= f.submit "Tạo Mới", class:'btn btn-primary' %>
    <%= link_to "Hủy", admin_authors_path, class:'btn btn-default' %>
<% end %>