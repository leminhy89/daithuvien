<!DOCTYPE html>
<html>
<head>
  <title>Daithuvien</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "https://connect.facebook.net/en_US/all.js#xfbml=1&apm;version=v2.4&apm;appId=1586767261535825";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
    <%= render 'partials/banner' %>
    <%= render 'partials/adminmenu' %>
    <section id="content-wrapper">
        <div class="container">
        <div class="row">
            <div id="user_nav" class="pull-right">
                <% if current_user %>
                    Xin chào, <%= current_user.email %> - 
                    <%= link_to "Đăng Xuất", admin_logout_path %>
                <% else %>
                    <%= link_to "Đăng Nhập", admin_login_path %>
                <% end %>
            </div>
        </div>
        <div class="clearfix"></div>
            <%= yield %>
        </div>
    </section>
    
    <%= render 'partials/footer' %>
</body>
</html>
